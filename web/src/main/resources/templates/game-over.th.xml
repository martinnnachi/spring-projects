<thlogic>
    <attr sel="#gameOver"
          th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#game-title" th:text="#{game.title}"/>
    <attr sel="#game-over" th:text="#{game.gameOver}"/>
    <attr sel="#result-message"
          th:text="${__${T(com.martinnnachi.util.AttributeNames).RESULT_MESSAGE}__}"/>
    <attr sel="#restart-message"
          th:href="@{__${T(com.martinnnachi.util.GameMappings).RESTART}__}"
          th:text="#{game.playAgain}"/>
    <attr sel="#home"
          th:href="@{__${T(com.martinnnachi.util.GameMappings).HOME}__}"
          th:text="#{game.home}"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer :: footerFragment}"/>
</thlogic>